<% # OVERRIDE Spotlight 3.3.0 to bring in Harvard theming for top navbar %>
<nav class="navbar navbar-expand-md navbar-dark topbar hl__header-child" role="navigation" aria-label="<%= t('spotlight.topbar.label') %>">
  <div class="<%= container_classes %>">
    <div class="hl__header-child__title hl__header-child__title--teal">
      <%= link_to(main_app.root_path, class: 'mb-0 navbar-brand site-title-nav') do %>
        <span>CURIOSity</span> Collections
      <% end %>
    </div>
    <% if current_user %>
      <button class="navbar-toggler navbar-toggler-right px-2 mx-2" type="button" data-toggle="collapse" data-target="#user-util-collapse" aria-controls="user-util-collapse" aria-expanded="false" aria-label="<%= t :toggle_nav %>">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% end %>
    <% if !current_user %>
      <div class="d-md-none d-flex align-items-stretch harvard-mobile-logo">
        <div class="hl__headerLogo d-flex align-items-center px-2">
          <%= link_to('https://library.harvard.edu') do %>
            <%= image_tag("harvard-shield-only.png", alt: "Harvard Library Logo", class: 'logo-shield') %>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="collapse navbar-collapse justify-content-md-end align-items-stretch" id="user-util-collapse">
      <div class="hl__headerLogo d-flex align-items-center">
        <%= link_to('https://library.harvard.edu') do %>
        <%= embedded_svg('harvard-library-full') %>
        <% end %>
      </div>
      <% if current_user %>
        <%= render partial: 'shared/user_util_links' %>
      <% end %>
    </div>
  </div>
</nav>
